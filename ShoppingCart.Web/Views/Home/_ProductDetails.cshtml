@model ShoppingCart.Services.DTOs.Product.ProductDto
    <script src="~/lib/main/main.js"></script>
<main>
    <div class="product_image_area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="single_product_img">
                        <img src="@Model.ProductImagePath" alt="#" class="img-fluid">
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="single_product_text text-center" id="productdetails">
                        <h3>
                            @Model.ProductImageName
                        </h3>
                        <p>
                           @Model.ProductDescription
                        </p>
                        <div class="card_area">
                            <div class="product_count_area" id="productPrice">
                                <p>Quantity</p>
                                <div class="product_count d-inline-block">
                                    <span class="product_count_item inumber-decrement"> <i class="ti-minus"></i></span>
                                    <input class="product_count_item input-number" type="text" value="1" min="0" max="10">
                                    <span class="product_count_item number-increment"> <i class="ti-plus"></i></span>
                                </div>
                                <p>€@Model.ProductPrice</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>